<%= form_for goal, url: url, method: method do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  
  <%= f.label :status %>:
  <%= f.select :status, options_for_select(Goal::STATUSES) %>
  
  <%= f.label :access %>:
  <%= f.select :access, options_for_select(Goal::ACCESSES) %>
  
  <%= f.label :description %>:
  <%= f.text_area :description %>
  
  <%= f.submit submit_message %>
<% end %>

